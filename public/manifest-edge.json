{
  "manifest_version": 3,
  "name": "Todone - Task Manager",
  "version": "1.0.0",
  "description": "Add tasks to Todone directly from your browser",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "extension/popup.html",
    "default_icon": {
      "16": "extension/icons/icon-16x16.png",
      "48": "extension/icons/icon-48x48.png",
      "128": "extension/icons/icon-128x128.png"
    },
    "default_title": "Add to Todone"
  },
  "icons": {
    "16": "extension/icons/icon-16x16.png",
    "48": "extension/icons/icon-48x48.png",
    "128": "extension/icons/icon-128x128.png"
  },
  "background": {
    "service_worker": "extension/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["extension/content.js"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "quick-add": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Quick add task from selected text"
    }
  }
}
