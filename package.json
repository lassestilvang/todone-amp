{
  "name": "todone",
  "version": "1.0.0",
  "description": "From to-do to todone - A complete task management application",
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite",
    "build": "bun run type-check && bunx --bun vite build",
    "preview": "bunx --bun vite preview",
    "lint": "bunx eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "bunx tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:e2e": "bunx playwright test",
    "test:e2e:ui": "bunx playwright test --ui",
    "test:e2e:headed": "bunx playwright test --headed",
    "test:e2e:chromium": "bunx playwright test --project=chromium",
    "storybook": "bunx --bun storybook dev -p 6006",
    "build-storybook": "bunx storybook build",
    "lighthouse": "bunx lhci autorun",
    "lighthouse:collect": "bunx lhci collect",
    "perf:budget": "bun run build && bun run lighthouse"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@tiptap/react": "^3.16.0",
    "@tiptap/starter-kit": "^3.16.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dexie": "^3.2.7",
    "lucide-react": "^0.294.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.15.4",
    "tailwind-merge": "^2.6.0",
    "web-vitals": "^3.5.2",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^20.3.7",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-a11y": "^10.2.0",
    "@storybook/addon-docs": "^10.2.0",
    "@storybook/addon-onboarding": "^10.2.0",
    "@storybook/react-vite": "^10.2.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "^1.3.6",
    "@types/node": "^20.19.30",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-storybook": "^10.2.0",
    "jsdom": "^23.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "storybook": "^10.2.0",
    "tailwindcss": "^3.4.19",
    "terser": "^5.46.0",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^1.6.1"
  }
}
